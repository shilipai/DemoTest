<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestRegisterProgressViewActivity">

    <com.lxs.demotest.RegisterProgressView
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:register_progress_view_all_step="3"
        app:register_progress_view_step="3"/>

    <com.lxs.demotest.RegisterProgressView
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/register_progress_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:register_progress_view_indicator_icon="@drawable/coupon"
        app:register_progress_view_all_step="3"/>

    <Button
        android:id="@+id/btn"
        android:text="前进一步"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>